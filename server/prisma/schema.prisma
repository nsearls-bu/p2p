generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id               String      @id @default(uuid())
  firstName        String
  lastName         String
  cell             String
  email            String      @unique
  image            String?
  birthday         DateTime?
  username         String      @unique
  password         String
  street           String?
  city             String?
  state            String?
  postalCode       String?
  SentMessages     Message[]   @relation("SentMessages")
  RecievedMessages Message[]   @relation("RecievedMessages")
  ActiveUser       ActiveUser?
}

model Message {
  id              String   @id @default(uuid())
  sender          User     @relation(name: "SentMessages", fields: [senderID], references: [id])
  senderID        String
  recipient       User     @relation(name: "RecievedMessages", fields: [recipientID], references: [id])
  recipientID     String
  timeSent        DateTime @default(now())
  messageContents String
}

model ActiveUser {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userID], references: [id])
  userID    String   @unique
  username  String
  expiresIn DateTime @default(now())
}

model Connection {
  id                String  @default(uuid())
  initiatorSDP      String?
  answerSDP         String?
  initiatorUsername String
  recipientUsername String

  @@id([initiatorUsername, recipientUsername])
}

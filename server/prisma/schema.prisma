generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String         @id @default(uuid())
  firstName     String
  lastName      String
  cell          String
  email         String         @unique
  image         String?
  birthday      DateTime?
  username      String         @unique
  password      String
  street        String?
  city          String?
  state         String?
  postalCode    String?
  conversations Conversation[]
}

model Conversation {
  id          String    @id @default(uuid())
  users       User[]
  name        String
  dateCreated DateTime
  messages    Message[]
}

model Message {
  id             String       @id @default(uuid())
  senderID       String
  recipientID    String
  conversationID Conversation @relation(fields: [id], references: [id])
  timeSend       DateTime     @default(now())
}
